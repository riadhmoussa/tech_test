<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/primary_color"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/congradulation"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="22sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_have_successfully_completed_you_child_profile"
                android:textColor="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="22sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="349dp"
                android:layout_marginHorizontal="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/congrats_img"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="33dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="50dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnAddNewChild"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_marginEnd="11dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/abel_regular"
                            android:text="@string/add_another_child"
                            android:textColor="@color/primary_color"
                            android:textSize="18sp" />



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnContinue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="11dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/continue_txt"
                            android:fontFamily="@font/abel_regular"
                            android:textColor="@color/primary_color"
                            android:layout_marginEnd="20dp"
                            android:textSize="18sp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:gravity="center_vertical"
                            android:paddingTop="10px"
                            android:paddingBottom="10px"
                            android:src="@drawable/arrow_forward" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</layout>